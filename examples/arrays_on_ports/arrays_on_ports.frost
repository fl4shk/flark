module VectorAdder
	#(
		// You thought it was data input/output, but it was me, DIO!
		WIDTH__DIO = 8,
		ARR_SIZE__DIO = 8
	)
	(
		input logic [WIDTH__DIO]
			i_a_arr[ARR_SIZE__DIO], i_b_arr[ARR_SIZE__DIO],
		output logic [WIDTH__DIO] o_sum_arr[ARR_SIZE__DIO]
	)
{
	generate for (i : range(0, ARR_SIZE__DIO - 1))
	{
		assign o_sum_arr[i] = i_a_arr[i] + i_b_arr[i];
	}
}
